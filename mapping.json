{
    "settings":{
        "index": {
            "number_of_replicas": 0
        },
        "analysis":{
            "char_filter":{
                "whitespace_remove": {
                    "type": "pattern_replace",
                    "pattern": "\\s+",
                    "replacement": ""
                },
                "punctuation_remove": {
                    "type": "pattern_replace",
                    "pattern": "\\p{P}",
                    "replacement": ""
                }
            },
            "filter":{
                "my_asciifolding":{
                    "type":"asciifolding",
                    "preserve_original" : true
                }
            },
            "normalizer":{
                "titre:normalizer":{
                    "type": "custom",
                    "char_filter":["whitespace_remove"],
                    "filter":["lowercase"]
                },
                "auteur:normalizer":{
                    "type":"custom",
                    "char_filter":["whitespace_remove"],
                    "filter":["lowercase"]
                },
                "id:normalizer":{
                    "type":"custom",
                    "char_filter":["whitespace_remove","punctuation_remove"],
                    "filter":["lowercase"]
                },
                "page:normalizer":{
                    "type":"custom",
                    "char_filter":["whitespace_remove"],
                    "filter":["lowercase"]
                },
                "volume:normalizer":{
                    "type":"custom",
                    "char_filter":["whitespace_remove"],
                    "filter":["lowercase"]
                },
                "numero:normalizer":{
                    "type":"custom",
                    "char_filter":["whitespace_remove"],
                    "filter":["lowercase"]
                },
                "datePubli:normalizer":{
                    "type":"custom",
                    "char_filter":["whitespace_remove"],
                    "filter":["lowercase"]
                }
            }
        }
    },
