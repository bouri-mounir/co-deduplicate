[
    { 
    "rule":"1",
    "name":"Titre + DOI",
    "non_empty":["jsonLine.titre.value","jsonLine.doi.value"],
    "query":
        {
            "query": {
                "bool": {
                    "should": [
                        {
                            "bool": {
                                "must": [
                                    {"match": {"titre.normalized": "jsonLine.titre.value"}},
                                    {"match": {"doi.normalized": "jsonLine.doi.value"}}
                                ]
                            }
                        }
                    ],
                    "minimum_should_match": 1
                }
            }
        }
    },
    { 
