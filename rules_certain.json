[
    { 
    "rule":"1",
    "name":"Titre + DOI",
    "non_empty":["titre.value","doi.value"],
    "query":
        {
           
                "bool": {
                    "must": [
                        {"match": {"titre.normalized": "titre.value"}},
                        {"match": {"doi.normalized": "doi.value"}}
                    ],
                    "_name":"titre+doi"
                }
        }
    },
    { 
    "rule":"2",
    "name":"Titre+volume+numero+issn",
    "non_empty":["titre.value","volume.value","numero.value","issn.value"],
    "query":{
      
            "bool":{
               
                    "must": [
                        {"match": {"titre.normalized": "titre.value"}},
                        {"match": {"volume.normalized": "volume.value"}},
                        {"match": {"numero.normalized": "numero.value"}},
                        {"match": {"issn.normalized": "issn.value"}}
                    ],
                    "_name":"titre+volume+numero+issn"
                }
          
        }   
    },
    { 
    "rule":"3",
    "name":"DOI",
    "non_empty":["doi.value"],
    "query":{
       
            "bool": {
               
                    "must": [
                        {"match": {"doi.normalized": "doi.value"}}
                    ],
                    "_name":"doi"
                }    
            }
           
    },
    { 
    "rule":"4",
    "name":"Titre+auteur+issn",
    "non_empty":["titre.value","auteur.value","issn.value"],
    "query":{
       
            "bool": {
                    "must": [
                        {"match": {"titre.normalized": "titre.value"}},
                        {"match": {"auteur.normalized": "auteur.value"}},
                        {"match": {"issn.normalized": "issn.value"}}
                    ],
                    "_name":"titre+auteur+issn"
                }
            
        }
    },
    { 
    "rule":"5",
    "name":"titre+auteur_init+issn",
    "non_empty":["titre.value","auteur_init.value","issn.value"],
    "query":{
       
            "bool": {
                    "must": [
                        {"match": {"titre.normalized": "titre.value"}},
                        {"match": {"auteur_init.normalized": "auteur_init.value"}},
                        {"match": {"issn.normalized": "issn.value"}}
                    ],
                    "_name":"titre+auteur_init+issn"
                }
          
        }   
    },
    { 
    "rule":"6",
    "name":"issn+volume+numero+page",
    "non_empty":["issn.value","volume.value","numero.value","page.value"],
    "query":{
       
            "bool": {
                    "must": [
                        {"match": {"issn.normalized": "issn.value"}},
                        {"match": {"volume.normalized": "volume.value"}},
                        {"match": {"numero.normalized": "numero.value"}},
                        {"match": {"page.normalized": "page.value"}}
                    ],
                    "_name":"issn+volume+numero+page"
                }
           
        }    
    }
]